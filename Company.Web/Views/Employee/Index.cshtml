@model IEnumerable<Employee>
@{

    ViewData["Title"] = "Index";
}
<h1>All Employees</h1>
<br />
<a asp-action="Create" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<br />

@if (Model.Count() > 0)

{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.HiringDate)</th>
                <th>@Html.DisplayNameFor(D => D.Department)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.ImageUrl)</th>
                <th>@Html.DisplayNameFor(D => D.DepartmentId)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Address</td>
                    <td>@employee.Age</td>
                    <td>@employee.Id</td>
                    <td>@employee.HiringDate</td>
                    <td>@employee.Department</td>
                    <td>@employee.Email</td>
                    <td>@employee.ImageUrl</td>
                    <td>@employee.DepartmentId</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Details

                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update

                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete

                        </a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is on Employee</h3>
    </div>
}

